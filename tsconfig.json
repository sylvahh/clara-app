{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "outDir": "public",
	  "sourceMap": true,
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "moduleResolution": "node",
	  "resolveJsonModule": true
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules"
	]
}